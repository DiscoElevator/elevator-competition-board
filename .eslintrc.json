{
    "env": {
        "browser": true,
        "es6": true,
		"mocha": true
    },
	"globals": {
		"chai": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ],
		"no-console": "off"
    }
}
